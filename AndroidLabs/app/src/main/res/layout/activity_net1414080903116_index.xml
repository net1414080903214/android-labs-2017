<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_net1414080903116_index"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context="edu.hzuapps.androidlabs.homeworks.net1414080903116.Net1414080903116Index">

    <TextView
        android:id="@+id/show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/text_dynamic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/show_name"
        android:background="#FFFFFF"
        android:hint="请输入你的文字动态......"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text"
        android:background="#FFFFF8"
        android:layout_marginTop="19dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="图片"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picture"
        android:layout_below="@+id/text_dynamic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <Button
        android:text="发送"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:onClick="add"
        android:layout_alignBaseline="@+id/picture"
        android:layout_alignBottom="@+id/picture"
        android:layout_toStartOf="@+id/picture" />


</RelativeLayout>
