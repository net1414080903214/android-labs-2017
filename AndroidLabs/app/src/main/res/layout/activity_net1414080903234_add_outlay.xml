<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_net1414080903234__add_outlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.hzuapps.androidlabs.homework.net1414080903234.Net1414080903234AddOutlayActivity">
    <LinearLayout
        android:id="@+id/addoutlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/orange"
        android:padding="0dp"
        android:weightSum="10">
        <TextView
            android:id="@+id/foutlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加支出"
            android:textColor="@color/white"
            android:textSize="36dp"
            android:gravity="center"
            android:background="@color/orange"
            android:layout_gravity="center"
            android:layout_weight="9"/>

        <Button
            android:text="取消"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:id="@+id/buttonCancleOutlay" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/outlayLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addoutlay"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支     出:"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/loutlay"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入支出金额"
            android:textSize="24dp"
            android:maxLength="9"
            android:id="@+id/textoutlay"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/usageLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/outlayLinear"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用    途:"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/ousage"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入用途"
            android:textSize="24dp"
            android:id="@+id/textousage"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/odateLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/usageLinear"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日    期:"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/doutlay"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1995"
            android:textSize="24dp"
            android:maxLength="4"
            android:id="@+id/otextyear"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="12"
            android:textSize="24dp"
            android:maxLength="2"
            android:id="@+id/otextmonth"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="31"
            android:textSize="24dp"
            android:maxLength="2"
            android:id="@+id/otextday"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:text="添 加"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odateLinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/buttonAddOutlay" />

</RelativeLayout>
