<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_net1414080903234__add_income"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.hzuapps.androidlabs.homework.net1414080903234.Net1414080903234AddIncomeActivity">
    <LinearLayout
        android:id="@+id/addincomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/orange"
        android:padding="0dp"
        android:weightSum="10">
        <TextView
            android:id="@+id/fincome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加收入"
            android:textColor="@color/white"
            android:textSize="36dp"
            android:gravity="center"
            android:background="@color/orange"
            android:layout_gravity="center"
            android:layout_weight="9"/>

        <Button
            android:text="取消"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idateLinear"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:id="@+id/buttonCancleIncome" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/incomeLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addincomer"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收    入:"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/lincome"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入收入金额"
            android:textSize="24dp"
            android:maxLength="9"
            android:id="@+id/textincome"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/draweeLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/incomeLinear"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款人:"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/pincome"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入付款人名字"
            android:textSize="24dp"
            android:id="@+id/textpincome"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/idateLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/draweeLinear"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日    期:"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:id="@+id/dincome"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1995"
            android:textSize="24dp"
            android:maxLength="4"
            android:id="@+id/itextyear"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="12"
            android:textSize="24dp"
            android:maxLength="2"
            android:id="@+id/itextmonth"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="31"
            android:textSize="24dp"
            android:maxLength="2"
            android:id="@+id/itextday"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:textSize="24dp"
            android:gravity="left"
            android:padding="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:text="添 加"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idateLinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/buttonAddIncome" />

</RelativeLayout>
