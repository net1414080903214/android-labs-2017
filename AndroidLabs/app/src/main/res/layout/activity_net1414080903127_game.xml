<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.hzuapps.androidlabs.homeworks.net1414080903127.Net1414080903127GameActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rock"
        android:background="@drawable/rock_button_net1414080903127"/>
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/scissors"
        android:background="@drawable/scissors_button_net1414080903127"
        android:layout_toRightOf="@id/rock"/>
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/paper"
        android:background="@drawable/paper_button_net141408093127"
        android:layout_toRightOf="@id/scissors"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ascertain"
        android:text="确定"
        android:layout_below="@id/rock"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ascertain"
        android:text="游戏局数"
        android:id="@+id/GameTime"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/GameTime"
        android:text="得分"
        android:id="@+id/GameGrade"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/GameGrade"
        android:text="赢家"
        android:id="@+id/Winner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player"
        android:text="玩家"
        android:textSize="50dp"
        android:layout_below="@+id/Winner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统"
        android:id="@+id/system"
        android:textSize="50dp"
        android:layout_marginEnd="23dp"
        android:layout_alignBaseline="@+id/player"
        android:layout_alignBottom="@+id/player"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vs"
        android:text="VS"
        android:textSize="50dp"
        android:layout_below="@+id/system"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/palyerO"
        android:background="@drawable/white_net1414080903127"
        android:layout_below="@+id/player"
        android:layout_alignStart="@+id/player"
        android:layout_marginTop="17dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/systemO"
        android:background="@drawable/white_net1414080903127"
        android:layout_alignTop="@+id/palyerO"
        android:layout_alignStart="@+id/system" />


</RelativeLayout>
